#previews
    min-height 100px
    text-align center
    span.glyphicon-upload
        font-size 3em
        opacity 0.2
        position absolute
        top 50%
#previews.single
    min-height 15px
    text-align center
    span.glyphicon-upload
        font-size 1em
        opacity 0.2
        position absolute
        top 50%
#fileModal
    position absolute
    border black solid 1px
    background-color white

#editor_window label.selected
    background-color orange

#editor_window .item-edit
    display inline-block
    width 80px
    height 20px

ol.tree
    .folder-expand
        position absolute
        left -45px
    .edit
        -ms-transform scale(0.9)
        -moz-transform scale(0.9)
        -webkit-transform scale(0.9)
        -o-transform scale(0.9)
    li
        position relative
        list-style none

       label.folder
            cursor pointer
            display block
            margin-left -15px
            margin-right 5px
            &~ ol
                display none
                height 1em
                padding-left 0px
                margin-left 30px
                border-left 1px solid black

                &> li
                    display none
                    padding-left 1px
                    padding-top 10px
                    padding-left -10px
                li::before
                    content: "â€•"

            &.open ~ ol
                height auto
                display block

                &> li
                    display block
                    margin 0 0 0.125em

                &> li:last-child
                    margin 0 0 0.063em

            span
                padding-right 5px
        label.file
            margin-left -5px
