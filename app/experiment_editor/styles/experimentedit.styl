#blocks
    height 50px
    background-color white
    margin-bottom 10px

#blocks div
    float left

.addblock
    display block
    float left

#overlay
    display none
    position absolute 
    margin auto
    height 50px
    width 400px
    top 0
    left 0
    bottom 0
    right 0
    z-index 1100 
    font-weight bold

#fade
    display none
    position absolute  
    left 0% 
    top 0% 
    background-color #222222
    -moz-opacity 0.7 
    opacity .70
    width 100%
    height 100%
    z-index 1010