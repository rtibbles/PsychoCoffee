#experiment_info
    margin auto
    width 25%
    background-color white

#toolbar
    margin auto
    width 25%

#blocks
    margin auto
    width 80%
    height 50px
    background-color white
    margin-bottom 10px
    div
        float left
        button
            background-color #22DD22
            border-radius 5px
            padding 5px
            margin 2px

#blockedit
    width 95%
    height 600px
    margin auto
    background-color desaturate(#DDDDFF, 60)

#editor_window .nav-tabs
    border-bottom 1px solid darken(#DDDDFF, 20)
    margin-bottom 5px

#editor_window .nav-tabs>li>a
    background-color desaturate(#DDDDFF, 60)
    border-bottom 1px solid darken(#DDDDFF, 20)
    color #000

#editor_window .nav-tabs>li.active>a, #editor_window .nav-tabs>li.active>a:hover, #editor_window .nav-tabs>li.active>a:focus
    border-top 1px solid darken(#DDDDFF, 20)
    border-left 1px solid darken(#DDDDFF, 20)
    border-right 1px solid darken(#DDDDFF, 20)
    background-color desaturate(#DDDDFF, 60)

#editor_window .nav-tabs>li>a:hover
    background-color #DDDDFF
    border 1px solid darken(#DDDDFF, 20)

.block
    padding-top 5px
    padding-bottom 5px
    padding-left 10px
    padding-right 10px
    background-color #FF5555
    border-radius 5px
    font-size 1.5em
    margin-left 5px

.addblock
    display block
    float left

#scrubber
    width 400px
    margin auto
    margin-top 5px