<div class="login">
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="input-group">
              <span class="input-group-addon" id="email-addon">Email</span>
              <input type="text" class="form-control" id="email" placeholder="Email" aria-describedby="email-addon">
            </div>
            </br>
            <div class="input-group">
              <span class="input-group-addon" id="password-addon">Password</span>
              <input type="password" class="form-control" id="password" placeholder="" aria-describedby="password-addon">
            </div>
            </br>
            <button class="login-btn btn btn-primary" type="submit">Login</button>
            <button class="create-btn btn btn-warning" type="submit">Create Account</button>
        </div>
    </div>
</div>