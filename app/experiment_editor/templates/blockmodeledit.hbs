<div class="modal fade" id="Modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close cancel"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">
        <label>Block Name: <input type="text" required="required" id="name" value="{{name}}" /></label>
        <br>
        <label>Display Width (pixels): <input type="number" required="required" id="width" value="{{width}}" /></label>
        <br>
        <label>Display Height (pixels): <input type="number" required="required" id="height" value="{{height}}" /></label>
        <br>
        <label>Timeout (ms): <input type="number" required="required" id="timeout" value="{{timeout}}" /></label>
        <br>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger delete">Delete</button>
        <button type="button" class="btn btn-warning cancel">Cancel</button>
        <button type="button" class="btn btn-primary save">Save changes</button>
      </div>
    </div>
  </div>
</div>